## ------ ##+ basic configs +## ------ ##


set $mod Mod1
font pango:Tamsyn 22.5
gaps inner 15
gaps outer 15
bindsym --release Print exec scrot -e 'mv $f ~/Pictures/Shots'
bindsym $mod+F12 exec i3lock -c 000000 

# hold to drag floating window with mouse
floating_modifier $mod

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# container layout 
bindsym $mod+w layout stacking
bindsym $mod+e layout tabbed
bindsym $mod+r layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
#bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

bindsym $mod+Return exec urxvt
bindsym $mod+q kill

# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# reload config file
bindsym $mod+Shift+c reload
# restart i3 
bindsym $mod+Shift+r restart

# color from pywal
set_from_resource $bg i3wm.color0 #fefefe
set_from_resource $fg i3wm.color7 #0E0606
set_from_resource $c1 i3wm.color6 #F9D9DB
set_from_resource $c3 i3wm.color3 #B7BFC9
set_from_resource $c5 i3wm.color5 #D5CED3
set $trp #00000000

## ------##+ run on startup +## ------ ##


exec_always --no-startup-id compton
exec --no-startup-id unclutter
exec --no-startup-id feh --bg-scale .config/i3/wallpaper5.jpeg
exec urxvt -e tmuxinator start daily
exec firefox


## ------ ##+ program launcher +## ------ ##


bindsym $mod+Shift+semicolon exec dmenu_run -b -fn "Tamsyn-12" -nb "$bg" -nf "$fg" -sb "$c5" -sf "$fg" 
bindsym $mod+semicolon exec rofi -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font 'Tamsyn 8' 


## ------ ##+ windows +## ------ ##


# window focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split horizontally
bindsym $mod+b split h

# split vertically
bindsym $mod+v split v

# window title bar
for_window [class="^.*"] border normal 0
for_window [class=".*"] title_format "<span font='8'> %title </span>"
title_align center 

# window border colors
# class                 border  backgr. text indicator child_border
client.focused          $c5     $c1     $fg  $c5       $c5
client.focused_inactive $c1     $c1     $fg  $bg       $bg
client.unfocused        $c1     $c1     $fg  $bg       $bg
client.urgent           $c1     $c1     $fg  $c3       $c3
#client.placeholder      $c5     $c1     $fg  $trp       $trp
#client.background $trp

# window rules
assign [class=Firefox] 1
assign [class=URxvt] 2
assign [class=Thunar|Catfish] 3
assign [class=Gvim|idle3|mupdf] 4
assign [class=Abiword] 5
assign [class=Gimp*|Inkscape|kdenlive] 6
for_window [class=feh|Lxappearance|mpv|System-config-printer.py|Catfish] floating enable
for_window [class=mpv] sticky enable
for_window [class=feh|mpv] resize set 500 280
for_window [class=mpv] border pixel 0
for_window [class=mpv] move right 1140 px 
for_window [class=mpv] move down 621 px
for_window [class=feh] move position center
default_floating_border pixel 0


