bindsym $mod+Shift+0 move container to workspace 10


## ------ ##+ modes +## ------ ##


# resize window (you can also use the mouse for that)
bindsym $mod+s mode "Resize"

mode "Resize" {
       
    bindsym h resize grow width 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize grow width 10 px or 10 ppt
    bindsym Down resize shrink height 10 px or 10 ppt
    bindsym Up resize grow height 10 px or 10 ppt
    bindsym Right resize shrink width 10 px or 10 ppt

    bindsym Return mode "default"
	bindsym Escape mode "default"
}

set $mode_gaps Gaps: [o]uter [i]nner [d]efault/none
set $mode_gaps_outer Outer Gaps: +/-5 [local] | Shift + +/-5 [global]
set $mode_gaps_inner Inner Gaps: +/-5 [local] | Shift + +/-5 [global]
set $mode_gaps_d/n Gaps: [d]efault [n]one | Shift + [d]efault Shift + [n]one [global]
bindsym $mod+d mode "$mode_gaps"
mode "$mode_gaps" {
		
    bindsym o      mode "$mode_gaps_outer"
    bindsym i      mode "$mode_gaps_inner"
    bindsym d	mode "$mode_gaps_d/n"	 	
    		
    bindsym Return mode "default"
    bindsym Escape mode "default"

}

mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5

        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
     
        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}

mode "$mode_gaps_d/n" {

	bindsym d gaps outer current set 15; gaps inner current set 15
	bindsym n gaps outer current set 0; gaps inner current set 0
	
	bindsym Shift+d gaps outer all set 15; gaps inner all set 15
	bindsym Shift+n gaps outer all set 0; gaps inner all set 0
	
	bindsym Return mode "$mode_gaps"
    bindsym Escape mode "default"
}	
	
set $mode_launch Launch: [f]irefox [n]ewsboat [c]mus [t]ransmission
bindsym $mod+a mode "$mode_launch"

mode "$mode_launch" {
    bindsym f exec firefox; mode "default"
    bindsym n exec urxvt -e newsboat -C ~/.config/newsboat/config -u ~/.config/newsboat/urls; mode "default"
    bindsym c exec urxvt -e cmus
	
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_log_off Log off: [s]hutdown [r]eboot
bindsym $mod+f mode "$mode_log_off"

mode "$mode_log_off" {
    bindsym s exec systemctl poweroff
    bindsym r exec systemctl reboot

    bindsym Escape mode "default"
    bindsym Return mode "default"
}


## ------ ##+ bar +## ------ ##


# top bar
bar {
	font pango:Tamsyn 8
	height 35
	i3bar_command i3bar -t
#	workspace_buttons no
	colors {
        background $bg
		statusline $fg
        separator $bg

		# colour of border, background, and text
        focused_workspace	$c5	$c1	$fg
        active_workspace	$bg	$c1	$fg
        inactive_workspace	$bg	$c1	$fg
        urgent_workspace	$bg	$c1	$c3
}
	position top
    status_command i3status -c ~/.config/i3/i3status.conf
}


## ------ ##+ function keys +## ------ ##


# change volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% 
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% 
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle 
 
# chage brightness
bindsym XF86MonBrightnessUp exec sudo brightnessctl s 20+
bindsym XF86MonBrightnessDown exec sudo brightnessctl s 20-

# cmus controls
bindsym XF86AudioPlay exec cmus-remote -p
bindsym XF86AudioStop exec cmus-remote -s
bindsym XF86AudioPrev exec cmus-remote -r
bindsym XF86AudioNext exec cmus-remote -n






